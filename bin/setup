#!/usr/bin/env ruby
require "fileutils"
require 'io/console'
require "net/http"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

def wait_for_server(port)
  puts "Waiting for server on port #{port} to boot..."
  retries = 0
  loop do
    begin
      response = Net::HTTP.get_response(URI("http://localhost:#{port}/up"))
      if response.is_a?(Net::HTTPSuccess)
        puts "✅ Server is up!"
        break
      end
    rescue Errno::ECONNREFUSED, Errno::EADDRNOTAVAIL
    end

    retries += 1
    raise "Server failed to start after 30 seconds." if retries > 15
    sleep(2)
  end
end

FileUtils.chdir APP_ROOT do
  # This script is a way to set up or update your development environment automatically.
  # This script is idempotent, so that you can run it at any time and get an expectable outcome.
  # Add necessary setup steps to this file.

  puts "== Installing dependencies =="
  system("yarn check") || system!("yarn install")
  system("bundle check") || system!("bundle install")

  puts "\n== Copying sample files =="
  unless File.exist?("config/database.yml")
    FileUtils.cp "config/database.yml.sample", "config/database.yml"
  end

  puts "\n== Preparing database =="
  system! "bin/rails db:prepare"

  puts "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"

  print "\n== Would you like to run db:seed? (y/n) "
  if STDIN.getch.downcase == 'y'
    server_pid = nil
    port = 3001

    begin
      puts "\nStarting temporary server for seeding..."
      server_pid = Process.spawn({"RAILS_LOG_LEVEL" => "warn"}, "bin/rails", "s", "-p", port.to_s)

      wait_for_server(port)

      puts "\nSeeding the database..."
      system!({"URL_BASE" => "http://localhost:#{port}"}, "bin/rails db:seed")
      puts "✅ Database seeded."
    ensure
      if server_pid
        puts "\nShutting down temporary server..."
        Process.kill('TERM', server_pid)
        Process.wait(server_pid)
      end
    end
  else
    puts "\nSkipping seed."
  end

  puts "\nSetup complete!"
  puts "   - Run 'bin/dev' to start all servers."
  puts "   - Run 'bundle exec rspec' to run tests."
end
